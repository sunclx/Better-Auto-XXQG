{
  "compilerOptions": {
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "https://esm.sh/preact"
  },
  "tasks": { "build": "deno run -A ./scripts/build.ts" },
  "lint": {
    "exclude": ["types/**/*.d.ts"],
    "rules": {
      "exclude": ["prefer-const"]
    }
  },
  "include": ["src/**/*", "types/**/*.d.ts"],
  "exclude": ["node_modules", "dist/**/*"]
}
