{
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx"
  },
  "tasks": {
    "build": "deno run -A ./scripts/build.ts",
    "minify": "deno run -A ./scripts/minify.ts"
  },
  "lint": {
    "exclude": ["types/**/*.d.ts"],
    "rules": {
      "exclude": ["prefer-const"]
    }
  },
  "include": ["src/**/*", "types/**/*.d.ts"],
  "exclude": ["node_modules", "dist/**/*"]
}
