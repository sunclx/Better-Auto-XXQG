{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES6",
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*"]
    },
    "jsx": "react-native",
    "jsxImportSource": "https://esm.sh/preact"
  },
  "include": ["src/**/*", "types/**/*.d.ts"],
  "exclude": ["node_modules", "dist/**/*"]
}
